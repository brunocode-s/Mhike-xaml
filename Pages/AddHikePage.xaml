<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHikePrototype.Pages.AddHikePage"
             Title="Add Hike">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                Spacing="15">

            <Entry x:Name="NameEntry"
                    Placeholder="Hike Name"/>
            <Entry x:Name="LocationEntry"
                    Placeholder="Location"/>
            <DatePicker x:Name="DatePicker"/>
            <Entry x:Name="ParkingEntry"
                    Placeholder="Parking"/>
            <Entry x:Name="LengthEntry"
                    Placeholder="Length (km)"
                    Keyboard="Numeric"/>
            <Picker x:Name="DifficultyPicker"
                    Title="Difficulty">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Easy</x:String>
                        <x:String>Moderate</x:String>
                        <x:String>Hard</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Editor x:Name="DescriptionEditor"
                    Placeholder="Description"/>

            <Button Text="Save Hike"
                    Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
