<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHikePrototype.Pages.HikeListPage"
             Title="Hikes">
    <CollectionView x:Name="HikesCollection"
                    SelectionMode="Single"
                    SelectionChanged="OnHikeSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5"
                       Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Location}"/>
                        <Label Text="{Binding Length, StringFormat='Length: {0} km'}"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
